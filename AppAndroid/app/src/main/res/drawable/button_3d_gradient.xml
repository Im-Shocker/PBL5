<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="25dp" />
                    <gradient
                        android:angle="90"
                        android:startColor="#1976D2"
                        android:endColor="#0D47A1"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Normal state -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="25dp" />
                    <solid android:color="#40000000" />
                </shape>
            </item>
            <!-- Main button -->
            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="25dp" />
                    <gradient
                        android:angle="90"
                        android:startColor="#2196F3"
                        android:centerColor="#1976D2"
                        android:endColor="#0D47A1"
                        android:type="linear" />
                </shape>
            </item>
            <!-- Highlight -->
            <item android:bottom="2dp" android:top="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="23dp" />
                    <gradient
                        android:angle="90"
                        android:startColor="#40FFFFFF"
                        android:centerColor="#20FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>